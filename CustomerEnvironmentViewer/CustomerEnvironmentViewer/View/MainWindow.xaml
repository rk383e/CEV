<Window x:Class="CustomerEnvironmentViewer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerEnvironmentViewer.View"
        xmlns:cl="clr-namespace:Commons.ControlLibrary;assembly=Commons.ControlLibrary"
        mc:Ignorable="d"
        Background="{StaticResource SecondaryThemeColor}"        
        Title="CEV" WindowStyle="None"
        MaxHeight="500" MaxWidth="600" Height="500" Width="600">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="bannerGrid" Grid.Row="0" MouseLeftButtonDown="BannerCanvas_MouseLeftButtonDown" Background="{StaticResource PrimaryThemeColor}">
            <Button x:Name="exitBtn" Click="ExitBtn_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Width="50" Height="30" Content="X" FontSize="18"
                    BorderBrush="{StaticResource ExitButtonBorderColor}" Foreground="{StaticResource ExitButtonForegroundColor}"/>
        </Grid>
        <!--<local:LoginView x:Name="loginView" Grid.Row="1" LoginSuccessful="OnLoginSuccessful"/>-->
        <Frame x:Name="mainContent" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <cl:LoadingGrid x:Name="loadingGrid" Grid.Row="1"/>
    </Grid>
</Window>
