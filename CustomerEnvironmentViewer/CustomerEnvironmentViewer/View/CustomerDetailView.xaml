<UserControl x:Class="CustomerEnvironmentViewer.View.CustomerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerEnvironmentViewer.View"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="customerSearchBox" Text="Search" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="241" Foreground="Gray"/>
        <TextBlock x:Name="customerLabel" Grid.Row="1" Margin="10,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Customers" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="customerListBox" Grid.Row="1" Margin="10,20,10,5" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="environmentLabel" Grid.Row="2" Margin="10,0,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Environment" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="environmentListBox" Grid.Row="2" Margin="10,20,10,5" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
