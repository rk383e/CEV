<UserControl x:Class="Commons.ControlLibrary.LoadingGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Commons.ControlLibrary"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="LoadingGridUC">
    <Grid x:Name="wrapper" >
        <Grid x:Name="maskGrid" Background="DimGray" Opacity="0.8"/>
        <fa:ImageAwesome x:Name="loadingIcon" Icon="CircleOutlineNotch" Foreground="{StaticResource PrimaryThemeColor}" Spin="{Binding ActiveSpin, ElementName=LoadingGridUC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SpinDuration="3" Height="100" Width="100" Opacity="1"/>
    </Grid>
</UserControl>
