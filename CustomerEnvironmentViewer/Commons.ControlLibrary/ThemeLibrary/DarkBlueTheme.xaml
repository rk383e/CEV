<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="GlobalFont">Calibri</FontFamily>

    <SolidColorBrush x:Key="PrimaryThemeColor" Color="#e7e7e7"/>
    <SolidColorBrush x:Key="SecondaryThemeColor" Color="#373737"/>

    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#e7e7e7"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="Black"/>
    <SolidColorBrush x:Key="ButtonBorderColor" Color="Black"/>
    <SolidColorBrush x:Key="ButtonHoverColor" Color="#d4d2d2"/>
    <SolidColorBrush x:Key="ButtonPressedColor" Color="#bbcaec"/>

    <SolidColorBrush x:Key="ExitButtonBorderColor" Color="#373737"/>
    <SolidColorBrush x:Key="ExitButtonForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="ExitButtonBackgroundColor" Color="#373737"/>
    <SolidColorBrush x:Key="ExitButtonHoverColor" Color="#d4d2d2"/>

    <SolidColorBrush x:Key="DefaultTextColor" Color="Black"/>


</ResourceDictionary>