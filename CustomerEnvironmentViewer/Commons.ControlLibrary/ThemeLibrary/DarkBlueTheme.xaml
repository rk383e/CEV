<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="GlobalFont">Calibri</FontFamily>

    <SolidColorBrush x:Key="PrimaryThemeColor" Color="#2e3245"/>
    <SolidColorBrush x:Key="SecondaryThemeColor" Color="#FFC3C1C1"/>

    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#2e3245"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="LightGray"/>
    <SolidColorBrush x:Key="ButtonBorderColor" Color="LightGray"/>
    <SolidColorBrush x:Key="ButtonHoverColor" Color="#FF41465F"/>
    <SolidColorBrush x:Key="ButtonPressedColor" Color="#FF7880A4"/>

    <SolidColorBrush x:Key="ExitButtonBorderColor" Color="#2e3245"/>
    <SolidColorBrush x:Key="ExitButtonForegroundColor" Color="LightGray"/>


</ResourceDictionary>